    <div class="container">
        <form id="contact" action="/signup/create" method="post">
            <div>
                <h3>Personal Details</h3>
                <section>
                    <label for="firstname">First Name *</label>
                    <input id="firstname" name="firstname" type="text" class="required" value="{{ user.firstName }}">
                    <label for="lastname">Last Name *</label>
                    <input id="lastname" name="lastname" type="text" class="required" value="{{ user.lastName }}">
                    <label for="telephone">Telephone *</label>
                    <input id="telephone" name="telephone" type="text" class="required number" value="{{ user.telephone }}">
                    <p>(*) Mandatory</p>
                </section>
                <h3>Your Address</h3>
